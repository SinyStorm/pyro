<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>controller.servlets.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>controller.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowDataServlet</servlet-name>
        <servlet-class>controller.servlets.ShowDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowDataServlet</servlet-name>
        <url-pattern>/deposites</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FullInfoServlet</servlet-name>
        <servlet-class>controller.servlets.FullInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullInfoServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LeadOutServlet</servlet-name>
        <servlet-class>controller.servlets.LeadOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeadOutServlet</servlet-name>
        <url-pattern>/lead-out</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangeStatusServlet</servlet-name>
        <servlet-class>controller.servlets.ChangeStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeStatusServlet</servlet-name>
        <url-pattern>/change-status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FullHistoryServlet</servlet-name>
        <servlet-class>controller.servlets.FullHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullHistoryServlet</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

</web-app>
